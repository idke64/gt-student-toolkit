---
import Layout from '@layouts/Layout.astro';
import '@styles/global.css';

---

<Layout title="Login">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 p-4">
    <div class="w-full max-w-md bg-white rounded-xl shadow-lg p-8">
      <div class="flex items-center mb-8">
        <div class="bg-yellow-400 w-10 h-10 rounded-lg flex items-center justify-center mr-3">
          <div class="w-6 h-6 bg-black opacity-70 rounded"></div>
        </div>
        <h1 class="text-xl font-bold">GT Student Toolkit</h1>
      </div>

      <h2 class="text-2xl font-semibold mb-6">Welcome back</h2>
      
      <form class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md">
        </div>

        <button type="submit" class="w-full bg-yellow-400 text-black py-2 px-4 rounded-lg shadow hover:bg-yellow-500 transition">
          Log In
        </button>
      </form>

      <p class="mt-4 text-center text-sm text-gray-600">
        Don't have an account? <a href="/signup" class="text-yellow-600 font-medium">Sign up</a>
      </p>
    </div>
  </div>
</Layout>