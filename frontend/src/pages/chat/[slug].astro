---
import Layout from '@layouts/Layout.astro';
import Chat from '@components/chat/Chat.astro';

const { slug } = Astro.params;
const isNewChat = !slug || slug === 'new';
---

<Layout title={isNewChat ? 'New Chat' : `Chat - ${slug}`}>
  <Chat slug={isNewChat ? null : slug} isNewChat={isNewChat} />
</Layout>