---
import Layout from '@layouts/Layout.astro';
import '@styles/global.css';
---

<Layout title="GT Resources">  
  <div class="h-full bg-gray-50 py-28 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Page Header -->
      <div class="text-center mb-12">
        <div class="bg-yellow-400 w-12 h-12 rounded-lg flex items-center justify-center mx-auto mb-4">
          <div class="w-6 h-6 bg-black opacity-70"></div>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Georgia Tech Resources</h1>
        <p class="text-lg text-gray-600">Essential tools and links for your academic journey</p>
      </div>

      <!-- Resource Cards -->
      <div class="grid gap-6 md:grid-cols-2">
        <!-- Academic Resources -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-blue-600 px-4 py-3">
            <h2 class="text-lg font-semibold text-white">Academic Tools</h2>
          </div>
          <div class="p-4">
            <ul class="space-y-3">
              <li>
                <a href="https://oscar.gatech.edu" class="flex items-center text-blue-600 hover:underline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  OSCAR (Course Registration)
                </a>
              </li>
              <li>
                <a href="https://canvas.gatech.edu" class="flex items-center text-blue-600 hover:underline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  Canvas (Learning Management)
                </a>
              </li>
              <li>
                <a href="https://library.gatech.edu" class="flex items-center text-blue-600 hover:underline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
                  </svg>
                  Library Resources
                </a>
              </li>
            </ul>
          </div>
        </div>

        <!-- Campus Services -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-yellow-500 px-4 py-3">
            <h2 class="text-lg font-semibold text-white">Campus Services</h2>
          </div>
          <div class="p-4">
            <ul class="space-y-3">
              <li>
                <a href="https://housing.gatech.edu" class="flex items-center text-blue-600 hover:underline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                  Housing & Residence Life
                </a>
              </li>
              <li>
                <a href="https://dining.gatech.edu" class="flex items-center text-blue-600 hover:underline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Dining Services
                </a>
              </li>
              <li>
                <a href="https://health.gatech.edu" class="flex items-center text-blue-600 hover:underline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                  </svg>
                  Health Services
                </a>
              </li>
            </ul>
          </div>
        </div>

        <!-- Student Support -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-green-600 px-4 py-3">
            <h2 class="text-lg font-semibold text-white">Student Support</h2>
          </div>
          <div class="p-4">
            <ul class="space-y-3">
              <li>
                <a href="https://career.gatech.edu" class="flex items-center text-blue-600 hover:underline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Career Services
                </a>
              </li>
              <li>
                <a href="https://counseling.gatech.edu" class="flex items-center text-blue-600 hover:underline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                  </svg>
                  Counseling Center
                </a>
              </li>
              <li>
                <a href="https://success.gatech.edu" class="flex items-center text-blue-600 hover:underline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                  </svg>
                  Student Success Programs
                </a>
              </li>
            </ul>
          </div>
        </div>

        <!-- Technology -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-purple-600 px-4 py-3">
            <h2 class="text-lg font-semibold text-white">Technology</h2>
          </div>
          <div class="p-4">
            <ul class="space-y-3">
              <li>
                <a href="https://passport.gatech.edu" class="flex items-center text-blue-600 hover:underline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                  </svg>
                  Passport (Account Management)
                </a>
              </li>
              <li>
                <a href="https://gatech.service-now.com/home" class="flex items-center text-blue-600 hover:underline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
                  </svg>
                  Tech Support
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>