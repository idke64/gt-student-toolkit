---
const currentPath = Astro.url.pathname;
const links = [
  { name: "Home", path: "/" },
  { name: "Chat", path: "/chat" },
  { name: "Resources", path: "/resources" },  // New resources tab
];
---

<nav class="bg-white shadow-md px-8 fixed w-full">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-xl font-bold text-gray-900">GT Toolkit</a>
      </div>
      <div class="flex items-center space-x-4">
        {links.map(link => (
          <a
            href={link.path}
            class={`nav-link ${currentPath === link.path ? 'after:w-full' : 'nav-link'}`}
          >
            {link.name}
          </a>
        ))}
        <div class="flex items-center gap-x-1">
          <a href="/login" class="btn-primary h-8 px-3">Login</a>
          <a href="/sign-up" class="btn-secondary h-8 px-3">Sign up</a>
        </div>
      </div>
    </div>
</nav>