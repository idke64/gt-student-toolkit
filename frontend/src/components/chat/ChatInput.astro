---
const { isNewChat } = Astro.props;
---

<form class="p-4 border-t border-gray-200 bg-white">
  <div class="flex">
    <input
      type="text"
      placeholder={isNewChat ? "Type your first message..." : "What's on your mind?"}
      class="flex-1 border border-gray-200 border-2 duration-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2  focus:ring-primary-100 ring-offset-1 text-sm"
      required
    />
    <button 
      type="submit"
      class="absolute right-4 bg-primary-100 hover:bg-yellow-500 text-white font-semibold px-4 py-2 rounded-r-lg transition-colors"
    >
      Send
    </button>
  </div>
</form>