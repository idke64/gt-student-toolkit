---
const { isNewChat } = Astro.props;
---

<form class="p-4 border-t border-gray-200 bg-white">
  <div class="flex">
    <input
      type="text"
      placeholder={isNewChat ? "Type your first message..." : "What's on your mind?"}
      class="flex-1 border border-gray-300 rounded-l-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400"
      required
    />
    <button 
      type="submit"
      class="bg-yellow-400 hover:bg-yellow-500 text-black px-4 py-2 rounded-r-lg transition-colors"
    >
      Send
    </button>
  </div>
</form>