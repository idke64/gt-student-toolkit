---
import Navbar from '@components/ui/Navbar.astro';
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{title} | GT Toolkit</title>
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">
  <Navbar />
  
  <main class="flex-1">
    <slot /> <!-- Your page content injects here -->
  </main>

  <!-- New Footer -->
  <footer class="bg-gray-800 text-white py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Quick Links -->
        <div>
          <h3 class="text-yellow-400 font-semibold mb-4">Quick Links</h3>
          <ul class="space-y-2">
            <li><a href="/" class="hover:text-yellow-300 transition">Home</a></li>
            <li><a href="/chat" class="hover:text-yellow-300 transition">Chat</a></li>
            <li><a href="/resources" class="hover:text-yellow-300 transition">Resources</a></li>
          </ul>
        </div>

        <!-- Official GT Links -->
        <div>
          <h3 class="text-yellow-400 font-semibold mb-4">Georgia Tech</h3>
          <ul class="space-y-2">
            <li><a href="https://gatech.edu" target="_blank" class="hover:text-yellow-300 transition">Main Website</a></li>
            <li><a href="https://directory.gatech.edu" target="_blank" class="hover:text-yellow-300 transition">Directory</a></li>
            <li><a href="https://calendar.gatech.edu" target="_blank" class="hover:text-yellow-300 transition">Events Calendar</a></li>
          </ul>
        </div>

        <!-- Contact -->
        <div>
          <h3 class="text-yellow-400 font-semibold mb-4">Contact</h3>
          <address class="not-italic">
            <p class="mb-2">Georgia Institute of Technology</p>
            <p class="mb-2">North Avenue, Atlanta, GA</p>
            <p class="mb-4">30332</p>
            <p><a href="mailto:hello@gatech.edu" class="hover:text-yellow-300 transition">hello@gatech.edu</a></p>
          </address>
        </div>
      </div>

      <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400 text-sm">
        <p>Â© {new Date().getFullYear()} Georgia Tech Student Toolkit. All rights reserved.</p>
      </div>
    </div>
  </footer>
</body>
</html>